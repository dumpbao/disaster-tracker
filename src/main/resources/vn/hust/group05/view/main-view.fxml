<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vn.hust.group05.controller.MainController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <Label text="Disaster Tracker - Group 05" textFill="#2c3e50">
        <font><Font name="System Bold" size="24.0" /></font>
    </Label>
    
    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="Nhập từ khóa (vd: Bão Yagi, Lũ quét)..." HBox.hgrow="ALWAYS" />
        <Button fx:id="searchButton" onAction="#onSearchButtonClick" style="-fx-background-color: #3498db; -fx-font-weight: bold;" text="Search &amp; Analyze" textFill="WHITE" />
        <ProgressIndicator fx:id="loadingSpinner" prefHeight="25.0" prefWidth="25.0" visible="false"/>
    </HBox>

    <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        
        <Tab text="Raw Data">
            <TableView fx:id="dataTable">
                <columns>
                    <TableColumn fx:id="colDate" prefWidth="100.0" text="Date" />
                    <TableColumn fx:id="colDamage" prefWidth="120.0" text="Damage Type" />
                    <TableColumn fx:id="colSentiment" prefWidth="90.0" text="Sentiment" />
                    <TableColumn fx:id="colTitle" prefWidth="500.0" text="Title (Double-click to open)" />
                </columns>
            </TableView>
        </Tab>

        <Tab text="Dashboard Analysis">
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
                <VBox spacing="20.0">
                    <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
                    
                    <HBox spacing="10.0">
                        <VBox alignment="CENTER" HBox.hgrow="ALWAYS" style="-fx-border-color: #bdc3c7; -fx-border-radius: 5;">
                            <Label style="-fx-font-weight: bold; -fx-padding: 5;" text="Problem 1: Sentiment Analysis" />
                            <PieChart fx:id="sentimentChart" legendVisible="true" maxHeight="300" />
                        </VBox>
                        
                        <VBox alignment="CENTER" HBox.hgrow="ALWAYS" style="-fx-border-color: #bdc3c7; -fx-border-radius: 5;">
                            <Label style="-fx-font-weight: bold; -fx-padding: 5;" text="Problem 2: Damage Classification" />
                            <BarChart fx:id="damageChart" legendVisible="false" maxHeight="300">
                                <xAxis><CategoryAxis label="Damage Type" /></xAxis>
                                <yAxis><NumberAxis label="Count" /></yAxis>
                            </BarChart>
                        </VBox>
                    </HBox>
                    
                    <HBox spacing="10.0">
                        <VBox alignment="CENTER" HBox.hgrow="ALWAYS" style="-fx-border-color: #bdc3c7; -fx-border-radius: 5;">
                            <Label style="-fx-font-weight: bold; -fx-padding: 5;" text="Problem 3: Relief Efforts" />
                            <StackedBarChart fx:id="reliefChart" maxHeight="300">
                                <xAxis><CategoryAxis label="Relief Item" /></xAxis>
                                <yAxis><NumberAxis label="Posts" /></yAxis>
                            </StackedBarChart>
                        </VBox>

                        <VBox alignment="CENTER" HBox.hgrow="ALWAYS" style="-fx-border-color: #bdc3c7; -fx-border-radius: 5;">
                            <Label style="-fx-font-weight: bold; -fx-padding: 5;" text="Problem 4: Media Trend" />
                            <LineChart fx:id="trendChart" maxHeight="300">
                                <xAxis><CategoryAxis label="Date" side="BOTTOM" /></xAxis>
                                <yAxis><NumberAxis label="Posts" side="LEFT" /></yAxis>
                            </LineChart>
                        </VBox>
                    </HBox>

                    <VBox alignment="CENTER" style="-fx-border-color: #bdc3c7; -fx-border-radius: 5;">
                        <Label style="-fx-font-weight: bold; -fx-padding: 5;" text="Problem 5: Top Affected Locations" />
                        <BarChart fx:id="locationChart" legendVisible="false" maxHeight="300">
                            <xAxis><CategoryAxis label="Province/City" /></xAxis>
                            <yAxis><NumberAxis label="Mentions" /></yAxis>
                        </BarChart>
                    </VBox>

                </VBox>
            </ScrollPane>
        </Tab>

    </TabPane>
</VBox>